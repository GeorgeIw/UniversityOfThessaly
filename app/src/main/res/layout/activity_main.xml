<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:contentDescription="@string/home_logo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/logo_rounded_corners"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/uth1_logo"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"/>

    <TextView
        android:id="@+id/larisa"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_larisa_borders"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="@string/larisa_city"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/volos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <TextView
        android:id="@+id/volos"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/home_larisa_borders"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="@string/volos_city"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/lamia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/larisa" />

    <TextView
        android:id="@+id/lamia"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/home_larisa_borders"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="@string/lamia_city"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/trikala"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/volos" />

    <TextView
        android:id="@+id/trikala"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/home_larisa_borders"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="@string/trikala_city"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/karditsa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lamia" />

    <TextView
        android:id="@+id/karditsa"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/home_larisa_borders"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="@string/karditsa_city"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trikala" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="19 σχολές"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/larisa"
        app:layout_constraintEnd_toEndOf="@+id/larisa"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/larisa"
        app:layout_constraintTop_toTopOf="@+id/larisa"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="14 σχολές"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/volos"
        app:layout_constraintEnd_toEndOf="@+id/volos"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/volos"
        app:layout_constraintTop_toTopOf="@+id/volos"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="7 σχολές"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/lamia"
        app:layout_constraintEnd_toEndOf="@+id/lamia"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/lamia"
        app:layout_constraintTop_toTopOf="@+id/lamia"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="3 σχολές"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/trikala"
        app:layout_constraintEnd_toEndOf="@+id/trikala"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/trikala"
        app:layout_constraintTop_toTopOf="@+id/trikala"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="8 σχολές"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/karditsa"
        app:layout_constraintEnd_toEndOf="@+id/karditsa"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/karditsa"
        app:layout_constraintTop_toTopOf="@+id/karditsa"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>